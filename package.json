{
	"name": "postcss-jit-props",
	"version": "1.0.7",
	"description": "PostCSS plugin to insert variables from a data source based on discovered usage",
	"keywords": [
		"postcss",
		"css",
		"postcss-plugin",
		"css-vars",
		"css-custom-properties"
	],
	"scripts": {
		"test": "jest --coverage && eslint .",
		"dev": "jest --coverage --watch",
		"lint": "eslint .",
		"prettier": "prettier .",
		"format:check": "npm run prettier -- --check",
		"format:write": "npm run prettier -- --write"
	},
	"author": "Adam Argyle <argyle@google.com>",
	"license": "MIT",
	"repository": "GoogleChromeLabs/postcss-jit-props",
	"engines": {
		"node": ">=10.0.0"
	},
	"dependencies": {
		"tiny-glob": "^0.2.9"
	},
	"peerDependencies": {
		"postcss": "^8.2.8"
	},
	"devDependencies": {
		"clean-publish": "^2.1.0",
		"eslint": "^7.21.0",
		"eslint-plugin-jest": "^24.2.1",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"postcss": "^8.2.8",
		"prettier": "^2.7.1",
		"simple-git-hooks": "^2.0.2"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.js": "eslint --fix"
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 2020
		},
		"env": {
			"node": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:jest/recommended"
		],
		"rules": {
			"jest/expect-expect": "off"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"quoteProps": "preserve",
		"trailingComma": "all"
	},
	"jest": {
		"testEnvironment": "node",
		"coverageThreshold": {
			"global": {
				"statements": 90
			}
		}
	}
}
